# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Server Configuration
PORT=3000
NODE_ENV=development

# Google Maps API (or OpenStreetMap)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
USE_OSM_FALLBACK=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Security
JWT_SECRET=your-jwt-secret-key

# SMS Gateway (Optional - for SOS alerts)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Mock for testing)
RAZORPAY_KEY_ID=mock-key-id
RAZORPAY_KEY_SECRET=mock-key-secret

# Service Area Configuration (Geofencing)
SERVICE_TOWNS=kailashahar,dharmanagar,kumarghat
